@model IEnumerable<GroupViewModel>

    <div class="indent__margin-bottom">
        <a asp-controller="Group" asp-action="Create">
            <input class="button button__link button__orange" type="button" value="+ Add New" />
        </a>
    </div>

@if (Model.Any())
{
    foreach (var group in Model)
    {
<form asp-controller="Group" asp-action="Index">
    <div>
        <p> Название группы: @group.Title</p>
    </div>
    <div>
        <p> Комментарий: @group.Description</p>
    </div>
</form>
        }
        }
        else
        {
        <h1>Group list is empty</h1>
        }
