@model ProfileViewModel


<form class="forms" method="post" asp-controller="Profile" asp-action="ChangeEmail">
    <div>
        <p>Текущий Email</p>
        <p>@Model.Email</p>
    </div>
    <div>
        <label asp-for="Email">Введите новый Email:</label><br />
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <input type="submit" value="Сохранить" />
    </div>
</form>