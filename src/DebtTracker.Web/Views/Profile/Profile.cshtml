@model ProfileViewModel

<h2>Вход в приложение</h2>
<form asp-controller="Profile" asp-action="Profile">
    <div>
        <p>@Model.LastName</p>
    </div>
    <div>
        <p>@Model.FirstName</p>
    </div>
    <div>
        <p>@Model.MiddleName</p>
    </div>
    <div>
        <p>@Model.Phone</p>
    </div>
    <div>
        <p>@Model.Email</p>
    </div>
    <div>
        <a asp-controller="Profile" asp-action="EditProfile">Изменить профиль</a>
        <a asp-controller="Profile" asp-action="ChangePhoneNumber">Изменить номер телефона</a>
    </div>
</form>
